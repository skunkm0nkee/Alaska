<!--Alaska-->

<includes>

	<include name="Viewtype_Episode">

		<!-- Browser -->

		<control type="list" id="51">
			<viewtype label="31752">list</viewtype>
			<animation effect="slide" start="55,0" end="55,0" time="0" condition="Player.HasVideo">Conditional</animation>
			<posx>267</posx>
			<posy>110</posy>
			<width>933</width>
			<height>467</height>
			<pagecontrol>61</pagecontrol>
			<scrolltime>0</scrolltime>
			<orientation>vertical</orientation>
			<onup>51</onup>
			<ondown>51</ondown>
			<onleft>7000</onleft>
			<onright>7000</onright>
			<visible>Container.Content(episodes)</visible>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_EpisodeFloat</include>
			<itemlayout width="633" height="60">
				<control type="label">
					<posx>100</posx>
					<posy>0</posy>
					<width>55</width>
					<height>60</height>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Episode]</label>
					<font>Font_EpisodeNumber</font>
					<textcolor>EpisodeNumber</textcolor>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>8</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>$INFO[ListItem.Title]</label>
					<font>Font_EpisodeTitleNF</font>
					<textcolor>EpisodeNumber</textcolor>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="label">
					<posx>125</posx>
					<posy>31</posy>
					<width>633</width>
					<height>60</height>
					<align>left</align>
					<label>AIRED: $INFO[ListItem.Date]</label>
					<font>Font_EpisodeDetailNF</font>
					<textcolor>EpisodeNumber</textcolor>
					<include>Animation_HiddenByInfo</include>
				</control>				
			</itemlayout>
			<focusedlayout width="633" height="164">
				<control type="image">
					<posx>13</posx>
					<posy>13</posy>
					<width>253</width>
					<height>139</height>
					<texture diffuse="episodematte.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
				</control>			
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>278</width>
					<height>164</height>
					<texture>episodeframe.png</texture>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
				</control>
				<control type="label">
					<posx>292</posx>
					<posy>25</posy>
					<width>633</width>
					<label>$INFO[ListItem.Episode]. $INFO[ListItem.Title]</label>
					<font>Font_EpisodeLabelF</font>
					<textcolor>EpisodeLabelF</textcolor>
					<animation type="Focus" reversible="false">
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
					<include>Animation_HiddenByInfo</include>					
				</control>
				<control type="image">
					<posx>14</posx>
					<posy>14</posy>
					<width>20</width>
					<height>20</height>
					<visible>!Skin.HasSetting(nomovieoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					<info>ListItem.Overlay</info>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
				</control>
			</focusedlayout>
		</control>

		<control type="textbox">
			<animation effect="slide" start="55,0" end="55,0" time="0" condition="Player.HasVideo">Conditional</animation>
			<posx>559</posx>
			<posy>172</posy>
			<width>633</width>
			<height>80</height>
			<align>left</align>
			<info>Container(51).ListItem.Plot</info>
			<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
			<font>Font_EpisodePlot</font>
			<textcolor>EpisodePlot</textcolor>
			<include>Animation_ZoomInZoomOut</include>			
			<include>Animation_EpisodePlot</include>
			<include>Animation_EpisodeFloat</include>
			<include>Animation_HiddenByInfo</include>
		</control>	

	</include>

</includes>
