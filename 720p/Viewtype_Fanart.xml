<!--Alaska-->

<includes>
	<include name="Viewtype_Fanart">
		<control type="wraplist" id="56">
			<posx>-66</posx>
			<posy>70</posy>
			<height>500</height>
			<width>1400</width>
			<onleft>300</onleft>
			<onright>300</onright>
			<onup>7000</onup>
			<ondown>7000</ondown>
			<viewtype label="Fanart">list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<visible>Container.Content(movies)</visible>
			<itemlayout width="278" height="194">
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>270</width>
					<height>152</height>
					<texture>episodematteNF.png</texture>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" diffuse="episodematteNF.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>89FFFFFF</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>130</posy>
					<width>272</width>
					<height>154</height>
					<texture>episodeframeNF.png</texture>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>284</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" flipy="true" diffuse="episodematteNF_reflect.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>89FFFFFF</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>4</posx>
					<posy>134</posy>
					<width>20</width>
					<height>20</height>
					<visible>!Skin.HasSetting(nomovieoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					<info>ListItem.Overlay</info>
					<colordiffuse>89FFFFFF</colordiffuse>
					<include>Animation_HiddenByInfo</include>
				</control>
			</itemlayout>
			<focusedlayout width="300" height="184">
				<control type="image">
					<posx>2</posx>
					<posy>124</posy>
					<width>290</width>
					<height>164</height>
					<texture background="true" diffuse="episodematte.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_PosterInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="145,202" start="51" end="100" time="600" tween="back" easing="out" />
					</animation>
				</control>
				<control type="image">
					<posx>-10</posx>
					<posy>114</posy>
					<width>314</width>
					<height>184</height>
					<texture>episodeframeF.png</texture>
					<include>Animation_PosterInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="157,192" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>130</posy>
					<width>25</width>
					<height>25</height>
					<visible>!Skin.HasSetting(nomovieoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					<info>ListItem.Overlay</info>
					<include>Animation_PosterInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="157,192" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>
			</focusedlayout>
		</control>
	<!-- Browser label and flags -->
		<control type="group">
			<posx>505</posx>
			<posy>364</posy>
			<visible>Control.IsVisible(56)</visible>
			<include>Animation_SlideUpFadeOut</include>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_ZoomedByMenu</include>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>640</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_MainMenuLabel</font>
				<textcolor>PosterTitle</textcolor>
				<label>[B]$INFO[ListItem.Label][/B]</label>
				<visible>Container.Content(movies)</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>36</posy>
				<width>640</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_TVShow</font>
				<textcolor>ListTrackF</textcolor>
				<label>$INFO[ListItem.Genre]</label>
				<visible>Container.Content(movies)</visible>
			</control>
			<control type="textbox">
				<posx>0</posx>
				<posy>74</posy>
				<width>640</width>
				<height>120</height>
				<align>left</align>
				<info>ListItem.Plot</info>
				<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
				<font>Font_TVShow</font>
				<textcolor>ListTrackF</textcolor>
				<visible>Container.Content(movies)</visible>
			</control>
		</control>
		<control type="group">
			<visible>Control.IsVisible(56)</visible>
			<include>Animation_ZoomedByMenu</include>
			<posx>-330</posx>
			<posy>20</posy>
			<include>PosterMediaFlags</include>
		</control>
	</include>
</includes>
